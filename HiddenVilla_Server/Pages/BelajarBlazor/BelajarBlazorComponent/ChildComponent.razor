<div>
    <div class="alert alert-info">@Title</div>
    @*panggil parameter ChildContent di sini*@
<div class="alert alert-success">
    @if (ChildContent == null)
    {
        <span>Ini RenderFragmentnnya kosong</span>
    }
    else
    {
        <span>@ChildContent</span>
    }
    @*anotherway to eventcallback*@
</div>
    <buttton class="btn btn-danger" @onclick="OnClickBtnMethod">Button to be clicked</buttton>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    //Untuk renderfragment (mengisi konent diantara child component)
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    //anotherway to eventcallback
    [Parameter]
    public EventCallback<MouseEventArgs> OnClickBtnMethod { get; set; }
}
